<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <servlet>
      <servlet-name>CreateUserServlet</servlet-name>
      <servlet-class>servlets.CreateUserServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <servlet-class>servlets.LoginServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>LogoutServlet</servlet-name>
      <servlet-class>servlets.LogoutServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>AddFriendServlet</servlet-name>
      <servlet-class>servlets.AddFriendServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>RemoveFriendServlet</servlet-name>
      <servlet-class>servlets.RemoveFriendServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>ListFriendServlet</servlet-name>
      <servlet-class>servlets.ListFriendServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>AddMessageServlet</servlet-name>
      <servlet-class>servlets.AddMessageServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>RemoveMessage</servlet-name>
      <servlet-class>servlets.RemoveMessage</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>ListMessageServlet</servlet-name>
      <servlet-class>servlets.ListMessageServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>ListMessagesAmisServlet</servlet-name>
      <servlet-class>servlets.ListMessagesAmisServlet</servlet-class>
   </servlet>
   <servlet>
      <servlet-name>ListConnectedServlet</servlet-name>
      <servlet-class>servlets.ListConnectedServlet</servlet-class>
   </servlet>
   
   
   <servlet-mapping>
      <servlet-name>CreateUserServlet</servlet-name>
      <url-pattern>/CreateUser</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>LoginServlet</servlet-name>
      <url-pattern>/Login</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>LogoutServlet</servlet-name>
      <url-pattern>/Logout</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>AddFriendServlet</servlet-name>
      <url-pattern>/AddFriend</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>RemoveFriendServlet</servlet-name>
      <url-pattern>/RemoveFriend</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>ListFriendServlet</servlet-name>
      <url-pattern>/ListFriend</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>AddMessageServlet</servlet-name>
      <url-pattern>/AddMessage</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>RemoveMessage</servlet-name>
      <url-pattern>/RemoveMessage</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>ListMessageServlet</servlet-name>
      <url-pattern>/ListMessage</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>ListMessagesAmisServlet</servlet-name>
      <url-pattern>/ListMessagesAmis</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>ListConnectedServlet</servlet-name>
      <url-pattern>/ListConnected</url-pattern>
   </servlet-mapping>
   
</web-app>

